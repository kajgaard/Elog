<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/moerkblaa</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/moerkblaa</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="fontFamily">@font/robotoregular</item>
    </style>

    <style name="NavigationDrawerStyle">
    <item name="android:textSize">80sp</item><!-- text size in menu-->
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="android:textSize">80sp</item>
        <!-- <item name="itemShapeFillColor">@color/moerkblaa</item> -->
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/bgmenu</item>
        <item name="colorOnSurface">@color/txtnav</item>

    </style>

    <style name="Theme.Elog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dropDown">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="overskrift_formular">
        <item name="android:textSize">@dimen/brodtekst_i_formular</item>
        <item name="fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="brodtekst_formular">
        <item name="android:textSize">@dimen/brodtekst_i_formular</item>
        <item name="fontFamily">@font/robotolight</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="posbtn_formular" parent= "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/brodtekst_i_formular</item>
        <item name="fontFamily">@font/robotolight</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/posBtnColor</item>
    </style>

    <style name="edittext_formular" parent="brodtekst_formular">
        <item name="android:inputType">text</item>
    </style>

    <style name="brodtekst_formular_regular">
        <item name="android:textSize">@dimen/brodtekst_i_formular</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.Elog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Elog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>